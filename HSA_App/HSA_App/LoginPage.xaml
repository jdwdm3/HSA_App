<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HSA_App.LoginPage">
  <StackLayout>
    <Label Text="UMB Health Services Application" VerticalOptions="Start" HorizontalOptions="FillAndExpand" />
    <Entry x:Name="username" Placeholder="Username" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
    <Entry x:Name="password" Placeholder="Username" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" IsPassword="True"/>
    <Button x:Name="loginButton" Text="Login" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Clicked="handleLogin"/>
  </StackLayout>
</ContentPage>